{% extends 'base.html.twig' %}

{% block menu %}
    <li class="active">
        <a href="{{ path('reminders') }}">Pregled podsetnika</a>
    </li>
    <li>
        <a href="{{ path('addreminder') }}">Dodaj novi podsetnik</a>
    </li>
    <li>
        <a href="{{ path('logout') }}">Izloguj se</a>
    </li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                MOJI PODSETNICI
            </h1>
        </div>
    </div>
    <!-- /.row -->
    {% set i = 0 %}
    {% for reminder in reminders %}

        {% if (i % 3 == 0) %}
            <div class='row'>
        {% endif %}

        {% set i = i+1 %}

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-fw fa-check"></i><b>{{ reminder.name }}</h4>
                </div>
                <div class="panel-body">

                    <p>{{ reminder.description }}</p>
                    <hr>
                    <p>{{ reminder.hours  }}:{{ reminder.minutes  }}</p>
                    <hr>
                    {% if reminder.mon == true %}  <p>PONEDELJAK</p> {% endif %}
                    {% if reminder.tue == true %}  <p>UTORAK</p> {% endif %}
                    {% if reminder.wed == true %}  <p>SREDA</p> {% endif %}
                    {% if reminder.thu == true %}  <p>CETVRTAK</p> {% endif %}
                    {% if reminder.fri == true %}  <p>PETAK</p> {% endif %}
                    {% if reminder.sat == true %}  <p>SUBOTA</p> {% endif %}
                    {% if reminder.sun == true %}  <p>NEDELJA</p> {% endif %}


                    <hr>

                    <a href="{{ path('delete',{'id':reminder.id}) }}" class="btn btn-default"> Obrisi </a>
                </div>
            </div>
        </div>
        {% if (i % 3 == 0 ) %} </div> {% endif %}
    {% endfor %}





{% endblock %}


